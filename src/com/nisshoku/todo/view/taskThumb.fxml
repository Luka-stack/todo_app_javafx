            </Label>
            <ImageView fx:id="deleteImg" fitHeight="30.0" fitWidth="30.0" layoutX="295.0" layoutY="10.0" onMouseClicked="#handleButtonAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/remove1.png" />
               </image>
            </ImageView>
            <ImageView fx:id="editImg" fitHeight="30.0" fitWidth="30.0" layoutX="255.0" layoutY="10.0" onMouseClicked="#handleButtonAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/edit.png" />
               </image>
            </ImageView>
            <Label fx:id="dateLbl" layoutX="185.0" onMouseClicked="#handleButtonAction" prefHeight="50.0" prefWidth="65.0" text="Label" textFill="#d32f2f">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</StackPane>
